<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit_message"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.easymail.EditMessageActivity">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/subject_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/subject">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edit_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:inputType="text"
            tools:text="My Subject"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/notes_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/subject_input_layout"
        android:layout_marginTop="8dp"
        android:hint="@string/notes">

    <android.support.design.widget.TextInputEditText
        android:id="@+id/edit_notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:inputType="text"
        tools:text="My Notes"/>
    </android.support.design.widget.TextInputLayout>

    <CheckBox
        android:id="@+id/show_notif_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notes_input_layout"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/text_show_notif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_alignBaseline="@+id/show_notif_checkbox"
        android:layout_toEndOf="@+id/show_notif_checkbox"
        android:text="@string/txt_alarm"/>

    <ImageView
        android:id="@+id/date_picker_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/show_notif_checkbox"
        android:layout_alignBottom="@+id/date_input_layout"
        android:layout_marginTop="8dp"
        android:layout_marginStart="20dp"
        android:onClick="showDatePickerDialog"
        app:srcCompat="@drawable/ic_date_range_black_24dp"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/date_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/show_notif_checkbox"
        android:layout_toEndOf="@+id/date_picker_image"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:hint="@string/date">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edit_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            tools:text="Mon, April 27, 2015" />
    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:id="@+id/time_picker_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date_input_layout"
        android:layout_alignBottom="@+id/time_input_layout"
        android:layout_marginTop="8dp"
        android:layout_marginStart="20dp"
        android:onClick="showTimePickerDialog"
        app:srcCompat="@drawable/ic_date_range_black_24dp"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/time_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date_input_layout"
        android:layout_toEndOf="@+id/time_picker_image"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:hint="@string/time">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edit_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            tools:text="Mon, April 27, 2015" />
    </android.support.design.widget.TextInputLayout>

    <CheckBox
        android:id="@+id/show_alarm_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time_input_layout"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />
    <TextView
        android:id="@+id/text_show_alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_alignBaseline="@+id/show_alarm_checkbox"
        android:layout_toEndOf="@+id/show_alarm_checkbox"
        android:text="@string/txt_notif"/>
</RelativeLayout>
