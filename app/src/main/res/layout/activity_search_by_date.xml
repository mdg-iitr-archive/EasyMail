<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_search_by_date"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.easymail.SearchByDateActivity">

    <TextView
        android:id="@+id/from_text_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:labelFor="@+id/search_from_date"
        android:text="From"
        android:onClick="setFromDate"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/from_text_date"
        android:layout_marginStart="16dp"
        />
    <EditText
        android:id="@+id/search_from_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/from_text_date"
        android:layout_marginStart="16dp"
        android:inputType="date"
        tools:text="Mon, April 27, 2015" />
    <TextView
        android:id="@+id/to_text_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_below="@+id/search_from_date"
        android:labelFor="@+id/search_to_date"
        android:text="To"
        android:onClick="setToDate"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/to_text_date"
        android:layout_marginStart="16dp"
        />
    <EditText
        android:id="@+id/search_to_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/to_text_date"
        android:layout_marginStart="16dp"
        android:inputType="date"
        tools:text="11:59 PM" />
    <Button
        android:id="@+id/saerch_by_date_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_to_date"
        android:layout_centerInParent="true"
        android:text="Search"
        android:onClick="searchByDate"/>
</RelativeLayout>
