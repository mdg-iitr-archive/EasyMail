<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    xmlns:tools="http://schemas.android.com/tools">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/email_sender_photo"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:contentDescription="sender_image"
        tools:src="@mipmap/ic_launcher" />
    <TextView
        android:id="@+id/sender_name_initial"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:gravity="center"
        tools:text="H"
        android:textSize="24sp"/>
    <TextView
        android:id="@+id/sender_email_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle"
        android:layout_alignEnd="@+id/email_sender_photo"
        tools:text="5"
        android:textSize="10sp"
        android:textColor="#FFF"
        android:gravity="center" />
    <TextView
        android:id="@+id/email_sender_title"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/email_sender_photo"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        android:maxLines="1"
        android:textSize="20sp"
        tools:text="Medim Daily Digest"/>
    <TextView
        android:id="@+id/last_email_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/email_sender_title"
        android:layout_alignBottom="@+id/email_sender_title"
        android:layout_marginStart="16dp"
        android:textSize="16sp"
        tools:text="8:14 am"/>
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="#88000000"
        android:layout_below="@+id/email_sender_photo"/>
    <TextView
        android:id="@+id/email_sender_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textSize="12sp"
        android:textStyle="bold"
        tools:text="The subject of the email is"/>
    <TextView
        android:id="@+id/email_sender_snippet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_sender_subject"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="0dp"
        android:textSize="12sp"
        tools:text="The snippet of the email is"/>
</RelativeLayout>